<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="kitten" class="com.techfinancials.practice.Kitten">
        <constructor-arg value="British Shorthair" />
        <constructor-arg type="int" value="2" />
    </bean>

    <bean id="school" class="com.techfinancials.practice.School">
        <property name="number" value="200" />
        <property name="name" value="Vasyl Stus Foreign Languages Specialized school" />
    </bean>

    <bean id="child" class="com.techfinancials.practice.Child" name="cld">
        <property name="mother">
            <bean class="com.techfinancials.practice.Person">
                <property name="gender" value="FEMALE" />
                <property name="firstName" value="Mum" />
            </bean>
        </property>
        <property name="father">
            <bean class="com.techfinancials.practice.Person">
                <property name="gender" value="MALE" />
                <property name="firstName" value="Dad" />
            </bean>
        </property>
        <property name="brother">
            <bean class="com.techfinancials.practice.Person">
                <property name="gender" value="MALE" />
                <property name="firstName" value="Bro" />
            </bean>
        </property>
        <property name="school" ref="sch" />
    </bean>

    <alias name="school" alias="sch" />

</beans>